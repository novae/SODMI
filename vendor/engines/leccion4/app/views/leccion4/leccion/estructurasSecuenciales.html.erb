<section id="fondo">
	<h3>Ejemplo 2</h3>
	<div id="textos">
		<br />
		<div class="row">
			<div class="five columns">
				<div class="row"><%= image_tag("arrowejerdown.png", :mouseover => "arrowejeractive.png",:class=>"arrowsmall") %></div>
				<div class="row"><a class="button-bevel magenta"> leer x <br /> leer y</a></div>
				<div class="row"><%= image_tag("arrowejerdown.png", :mouseover => "arrowejeractive.png",:class=>"arrowsmall") %></div>
				<div class="row"><a class="button-bevel cyan">res = x - y <br /> sum = x + y<br /> mul = x + y <br /> div = x + y</a></div>
				<div class="row"><%= image_tag("arrowejerdown.png", :mouseover => "arrowejeractive.png",:class=>"arrowsmall") %></div>	
				<div class="row"><a class="button-bevel magenta">imprime(res) <br /> imprime(sum) <br /> imprime(mul) <br/> imprime(div)</a></div>
				<div class="row"><%= image_tag("arrowejerdown.png", :mouseover => "arrowejeractive.png",:class=>"arrowsmall") %></div>	
				<br/>
			</div>
			<div class="seven columns">
				<div class="codigo">
				<p> 
					<span class="reservada">metodo</span> <span class="clases">opciones</span><span class="parentesis"> ( )</span>
					<br />
					<span class="reservada">variable</span><span class="variables"> x, y, sum, res, div, mul</span><span class="tipos"> tipo entero</span>
					<br />
					<span class="reservada">lee </span><span class="parentesis">(<span class="cadenas"> x </span>)</span>
					<br />
					<span class="reservada">lee </span><span class="parentesis">(<span class="cadenas"> y </span>)</span>
					<br />
					<span class="variables">res</span><span class="operadores"> = </span><span class="variables">x<span class="operadores"> - </span>y</span>
					<br />
					<span class="variables">sum</span><span class="operadores"> = </span><span class="variables">x<span class="operadores"> + </span>y</span>
					<br />
					<span class="variables">mul</span><span class="operadores"> = </span><span class="variables">x<span class="operadores"> * </span>y</span>
					<br />
					<span class="variables">div</span><span class="operadores"> = </span><span class="variables">x<span class="operadores"> / </span>y</span>
					<br />
					<span class="reservada">imprime </span><span class="parentesis">(<span class="parentesis"><span class="cadenas">"resta: "</span><span class="operadores">+</span><span class="variables">res</span>)</span></span>
					<br />
					<span class="reservada">imprime </span><span class="parentesis">(<span class="parentesis"><span class="cadenas">"suma: "</span><span class="operadores">+</span><span class="variables">sum</span>)</span></span>
					<br />
					<span class="reservada">imprime </span><span class="parentesis">(<span class="parentesis"><span class="cadenas">"multiplicacion: "</span><span class="operadores">+</span><span class="variables">mul</span>)</span></span>
					<br />
					<span class="reservada">imprime </span><span class="parentesis">(<span class="parentesis"><span class="cadenas">"division: "</span><span class="operadores">+</span><span class="variables">div</span>)</span></span>
					<br />
					<span class="reservada">termina metodo</span>
				<p>
				</div>	
				
			</div>
		</div>
