<!----------------------------------------------------------------------------------------->		
			
				<section id="fondo">
					<br />
					<br />
					<h2>Estructura: Repetir Hasta</h2>
					<div id="textos">
						<p align="justify">
							<br />
							
							Se ejecuta el bloque de sentencias, hasta que la condición sea verdadera.
							<br />
							<br />
							 Es lo mismo que en el caso anterior pero aquí como mínimo siempre se ejecutará el cuerpo una vez, en el caso anterior es posible que no se ejecute ni una sola vez.
							<br />
							<br />
						</p>
					</div>
					<br />
					<div id="botones">
						<a href="#/3/6" ><img src="assets/images/izquierda.png" /></a>
						<a href="#/4/1" ><img src="assets/images/abajo.png" /></a>
					</div>
					
				</section>

<!----------------------------------------------------------------------------------------->			
<!----------------------------------------------------------------------------------------->			
<section id="fondo">
					<br />
					
					<h3>Estructura Básica</h3>
					
					<div id="imagenes">
						<img src="assets/images/ciclo2-1.png">
					</div>
					<br />
					
					<div id="botones">
						<a href="#/4" ><img src="assets/images/arriba.png" /></a>
